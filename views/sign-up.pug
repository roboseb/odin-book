extends layout

block content
    h1 Welcome to the sign up/sign in page

    form(method='POST' action='')
        label(for='username') Username
        input(id='username' name='username' type='text')

        label(for='password') Password
        input(id='password' name='password' type='password')

        button(type='submit') Submit

    form(method='POST' action='')
        label(for='username-up') Username
        input(id='username-up' name='username' type='text')

        label(for='password-up') Password
        input(id='password-up' name='password' type='password')

        label(for='password-confirm') Confirm Password
        input(id='password-confirm' name='confirmPassword' type='password')

        button(type='submit') Submit


        if errors 
            ul.account-error 
                each error in errors
                    li= error.msg

        h2 Please sign in
